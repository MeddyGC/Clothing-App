<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bgrcolor"
    android:elevation="@dimen/dpp12"
    android:orientation="vertical"
    android:padding="@dimen/dpten">

    <ImageView
        android:id="@+id/album"
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/dp200"
        android:background="@android:drawable/picture_frame"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/album_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/detail"
        android:textSize="@dimen/dp18s"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAdd2Cart"
        android:layout_width="@dimen/dp105"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/chkbtncolor"
        android:gravity="center"
        android:text="@string/add_to_cart" />


</LinearLayout>