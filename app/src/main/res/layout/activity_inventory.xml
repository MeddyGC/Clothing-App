<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgrcolor"
    tools:context=".inventoryActivity">


    <ListView
        android:id="@+id/inventoryListView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp657"
        android:background="@color/bgrcolor" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="@dimen/dp135"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/inventoryListView"
        android:layout_marginBottom="-53dp"
        android:layout_weight="1"
        android:background="@color/chkbtncolor"
        android:text="Back to shop" />
</RelativeLayout>