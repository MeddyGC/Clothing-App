<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pop">

    <ImageView
        android:id="@+id/popImage"
        android:layout_width="@dimen/dp318"
        android:layout_height="@dimen/dp259"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginTop="@dimen/dps38"
        android:layout_marginEnd="@dimen/dp43"
        android:layout_marginRight="@dimen/dp43"
        android:layout_marginBottom="@dimen/dp434"
        android:foregroundGravity="center"
        app:srcCompat="@android:drawable/picture_frame" />

    <TextView
        android:id="@+id/popTextView"
        android:layout_width="@dimen/dp254"
        android:layout_height="@dimen/dp84"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp86"
        android:layout_marginLeft="@dimen/dp86"
        android:layout_marginEnd="@dimen/dp71"
        android:layout_marginRight="@dimen/dp71"
        android:layout_marginBottom="@dimen/dp357"
        android:gravity="center"
        android:text="@string/details"
        android:textSize="@dimen/dptxtsz30" />
</RelativeLayout>